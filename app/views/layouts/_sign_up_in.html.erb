<div class="reveal small" id="login_register" data-reveal  datdata-close-on-click="true" data-animation-in="fade-in" data-animation-out="fade-out">
  <div class="center row">
    <ul class="tabs" data-tabs id="sign-in-up">
      <li class="tabs-title is-active"><a href="#register" aria-selected="true">Sign Up</a></li>
      <li class="tabs-title"><a href="#login">Sign In</a></li>
    </ul>
    <div class="tabs-content" data-tabs-content="sign-in-up">
      <div class="tabs-panel is-active" id="register">
         <p>
              <div class="row">
                <div class="large-12 columns">
                  <div class="signup-panel">
                    <p class="welcome">Hello, new user!</p>
                    <form>
                      <div class="row collapse">
                        <div class="small-2  columns">
                          <span class="prefix"><i class="fi-torso"></i></span>
                        </div>
                        <div class="small-10  columns">
                          <input type="text" placeholder="Full Name">
                        </div>
                      </div>
                      <div class="row collapse">
                        <div class="small-2 columns">
                          <span class="prefix"><i class="fi-mail"></i></span>
                        </div>
                        <div class="small-10  columns">
                          <input type="text" placeholder="Email">
                        </div>
                      </div>
                      <div class="row collapse">
                        <div class="small-2 columns ">
                          <span class="prefix"><i class="fi-lock"></i></span>
                        </div>
                        <div class="small-10 columns ">
                          <input type="text" placeholder="Password">
                        </div>
                      </div>
                      <div class="row collapse">
                        <div class="small-12 columns ">
                          <input id="show-password" type="checkbox"><label for="show-password">Show password</label><br>
                          <a type="submit" class="button expanded">Sign Up</a>
                          <a href="#">Forgot your password?</a><br>
                        </div>
                      </div>
                    </form>                      
                  </div>
                </div>
               </div>
          </p>
      </div>
      <div class="tabs-panel" id="login">
         <p>
              <div class="row">
                <div class="large-12 columns">
                  <div class="signup-panel">
                    <p class="welcome">Welcome back!</p>
                    <form>
                      <div class="row collapse">
                        <div class="small-2 columns">
                          <span class="prefix"><i class="fi-mail"></i></span>
                        </div>
                        <div class="small-10  columns">
                          <input type="text" placeholder="Email">
                        </div>
                      </div>
                      <div class="row collapse">
                        <div class="small-2 columns ">
                          <span class="prefix"><i class="fi-lock"></i></span>
                        </div>
                        <div class="small-10 columns ">
                          <input type="text" placeholder="Password">
                        </div>
                      </div>
                      <a type="submit" class="button expanded">Sign In</a>
                    </form>
                  </div>
                </div>
               </div></p>
      </div>
    </div>
  </div>
    <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>