<div class="topics_list">
  <div class="title">
    <h3>话题列表</h3>
  </div>
  <div class="navpath">
    <span>
      <%= link_to "首页", admin_reports_path %>
    </span>
    <span class="slash">/</span>
    <span class="subpath">
      话题列表
    </span>
  </div>

  <div class="content">
    <table>
      <tr class="title">
        <th>话题id</th>
        <th>话题名称</th>
        <th>话题作者</th>
        <th>评论数量</th>
        <th class="recommend-value">推荐值</th>
        <th>操作</th>
      </tr>
      <% @topics.each_with_index do |topic| %>
      <tr class="body" id="topic-<%= topic.id %>">
        <td><%= topic.id %></td>
        <td><%= topic.title %></td>
        <td><%= topic.user.username %></td>
        <td><%= topic.comments.count %></td>
        <td class="recommend-value"><input type="number" name="recommend" class="topic-recommend" readonly="readonly" value="<%= topic.recommend %>" data-id="<%= topic.id %>"></td>
        <td><%= link_to "删除", topic_path(topic), method: :delete, remote: true,  data: { confirm:'确定删除?' } %></td>
      </tr>
      <% end %>
    </table>
    <div class="paginate">
      <%= will_paginate @topics %>
    </div>
  </div>
</div>

