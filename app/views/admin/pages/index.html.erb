 <table class="table table-striped table-advance table-hover">
  <tbody>
    <tr>    
       <th><i class="icon_profile"></i>Title</th>
       <th><i class="icon_profile"></i>Category</th>
       <th><i class="icon_profile"></i>Language</th>       
       <th><i class="fa fa-comments">Meeting</th>
       <th><i class="icon_clock_alt"></i>Created_At</th>
       <th><i class="icon_clock_alt"></i> Updated_At</th>
    </tr>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title%></td>
        <td><%= page.page_category.name if page.page_category_id%></td>
        <td><%= page.locale %></td>
        <td><%= page.meeting.name if page.meeting_id%></td>
        <td><%=page.created_at%></td>
        <td><%=page.updated_at%></td>
        <td>
          <div class="btn-group">
            <a class="btn btn-primary" href="#"><i class="icon_plus_alt2"></i></a>
            <a class="btn btn-success" href="#"><i class="icon_check_alt2"></i></a>
            <a class="btn btn-danger" href="#"><i class="icon_close_alt2"></i></a>
            <%#= link_to '<i class="icon_plus_alt2"></i>'.html_safe, admin_page_path , class:'btn btn-primary'%>
        <%= link_to '<i class="icon_check_alt2"></i>'.html_safe, edit_admin_page_path(page) , class:'btn btn-success' %>
        <%#= link_to '<i class="icon_close_alt2"></i>'.html_safe,  admin_page_url, method: :delete, data: { confirm: 'Are you sure?' }  , class:'btn btn-danger'%>
          </div>

        </td>
      </tr>
    <% end if  @pages%>

  </tbody>
</table>
<br>

<%= link_to 'New page', new_admin_page_path %>
