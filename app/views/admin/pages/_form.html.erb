
<section class="panel">
    <header class="panel-heading">
       New Page
    </header>
    <div class="panel-body">
       <%= form_for [:admin, @page], html: {class: 'form-horizontal'} do |f| %>
        <% if @page.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

              <ul>
                <% @page.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="form-group">
          <%= f.label :title, 'title', class: 'col-md-2 control-label' %>
         
          <div class="col-md-10">
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div> 
        <div class="form-group">
          <%= f.label :page_category_id, 'category of Page', class: 'col-md-2 control-label' %>
         
          <div class="col-md-10">
             <%=f.select :page_category_id, @categories.collect {|c| [c.name, c.id]},{:include_blank=>"Please select"} ,{class:"form-control m-bot15"}%>
          </div>
        </div>     
        <div class="form-group">          
          <%= f.label :locale, 'language', class: 'col-md-2 control-label' %>
         
          <div class="col-md-10">
            <label class="label_radio" for="radio-01">
              <%= f.radio_button :locale,'zh'%>Chinse
            </label>&nbsp;|&nbsp;
            <label class="label_radio" for="radio-01">
              <%= f.radio_button :locale,'en'%>English
            </label>
          </div>
        </div>  
        <div class="form-group">
          <%= f.label :slug, 'friendly url', class: 'col-md-2 control-label' %>
         
          <div class="col-md-10">
            <%= f.text_field :slug, class: 'form-control' %>
          </div>
        </div> 
        <div class="form-group">
          <%= f.label :head_pics, 'head_pics', class: 'col-md-2 control-label' %>
         
          <div class="col-md-10">
            <%= f.text_field :head_pics, class: 'form-control' %>
          </div>

        </div> 
        <div class="form-group">
          <%= f.label :layout, 'layout', class: 'col-md-2 control-label' %>
         
          <div class="col-md-10">
            <%= f.text_field :layout, class: 'form-control' %>
          </div>          
        </div> 
        <div class="form-group">
          <%= f.label :type, 'type', class: 'col-md-2 control-label' %>
         
          <div class="col-md-10">
            <%= f.text_field :type, class: 'form-control' %>
          </div>
        </div>  
        <div class="form-group">
          <%= f.label :meeting_id, 'meeting_id', class: 'col-md-2 control-label' %>
         
          <div class="col-md-10">
            <%= f.text_field :meeting_id, class: 'form-control' %>
          </div>
        </div>     
        <div class="form-group">
          <%= f.label :from, 'from', class: 'col-md-2 control-label' %>
         
          <div class="col-md-10">
            <%= f.text_field :from, class: 'form-control' %>
          </div>
        </div>     
        <div class="form-group">
          <%= f.label :author, 'author', class: 'col-md-2 control-label' %>
         
          <div class="col-md-10">
            <%= f.text_field :author, class: 'form-control' %>
          </div>
        </div> 
        <div class="form-group">
            <%= f.label :body, 'body', class: 'col-md-2 control-label' %>
            <div class="col-sm-10">
                <%= f.cktext_area :body, class: 'form-control ckeditor', placeholder: 'body', rows: 20 %>
            </div>
        </div>

      <div class="form-group"> 
        <div class="submit-button col-md-6">
          <%= f.submit 'Submit', class: 'btn btn-primary form-control' %>
        </div> 
        <div class="submit-button col-md-6">
          <%= link_to 'Cancle', class: 'btn btn-primary form-control' %>
        </div> 
      </div>
    <% end %>
  </div>
</section>