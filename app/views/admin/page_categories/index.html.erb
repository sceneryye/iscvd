 <table class="table table-striped table-advance table-hover">
  <tbody>
    <tr>
       <th><i class="icon_profile"></i>Name</th>
       <th><i class="icon_calendar"></i> Created_At</th>
       <th><i class="icon_calendar"></i> Updated_At</th>
    </tr>
    <% @page_categories.each do |page_category| %>
      <tr>
        <td><%= page_category.name %></td>
        <td><%=page_category.created_at%></td>
        <td><%=page_category.updated_at%></td>
        <td>
          <div class="btn-group">
            <a class="btn btn-primary" href="#"><i class="icon_plus_alt2"></i></a>
            <a class="btn btn-success" href="#"><i class="icon_check_alt2"></i></a>
            <a class="btn btn-danger" href="#"><i class="icon_close_alt2"></i></a>
            <%#= link_to '<i class="icon_plus_alt2"></i>'.html_safe, admin_page_category_path , class:'btn btn-primary'%>
        <%= link_to '<i class="icon_check_alt2"></i>'.html_safe, edit_admin_page_category_path(page_category) , class:'btn btn-success' %>
        <%#= link_to '<i class="icon_close_alt2"></i>'.html_safe,  admin_page_category_url, method: :delete, data: { confirm: 'Are you sure?' }  , class:'btn btn-danger'%>
          </div>

        </td>
      </tr>
    <% end if  @page_categories%>

  </tbody>
</table>
<br>

<%= link_to 'New page_category', new_admin_page_category_path %>
