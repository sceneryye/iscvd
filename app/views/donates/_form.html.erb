
  <div class="col-md-6 col-md-offset-3 sign-form">
    <%= form_for @donate, html: {class: 'form-horizontal'} do |f| %>
        <% if @donate.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@donate.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
                <% @donate.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="form-group">
          <%= f.label :amount, t(:amount), class: 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.text_field :amount, class: 'form-control mobile' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :full_name, t(:full_name), class: 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.text_field :full_name, class: 'form-control mobile' %>
          </div>
        </div>
        <div class="submit-button col-md-9 col-md-offset-3">
          <%= f.submit  class: 'button' %>
        </div>
    <% end %>
  </div>
