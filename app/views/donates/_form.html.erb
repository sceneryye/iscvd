
  <div class="col-md-6 col-md-offset-3 sign-form">
    <%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="form-group">
          <%= f.label :mobile, '手机', class: 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.text_field :mobile, class: 'form-control mobile' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, '邮箱', class: 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.text_field :email, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, '密码', class: 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, '确认密码', class: 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
        <div class="submit-button col-md-9 col-md-offset-3">
          <%= f.submit '提交', class: 'btn btn-primary form-control' %>
        </div>
    <% end %>
  </div>
